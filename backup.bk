bantime  = 3600
filter   = postfix-flood-attack
action   = iptables-multiport[name=postfix, port="http,https,smtp,submission,pop3,pop3s,imap,imaps,sieve", protocol=tcp]
logpath  = /var/log/mail.log
ignoreip = 127.0.0.1/8 ::1 192.168.1.0/24 14.201.130.169 27.50.88.9 35.200.177.103 192.168.0.0/24 149.72.245.18 1.145.209.219 1.145.214.34 1.145.244.50 1.145.253.74

